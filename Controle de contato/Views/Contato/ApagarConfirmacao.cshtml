@model ContatoModel

@{
    ViewData["Title"] = "Confirmação e apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
    <br />
<a class="btn btn-primary mb-2" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
<br />
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>

